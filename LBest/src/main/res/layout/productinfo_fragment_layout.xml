<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/wificonfig_pading_left"
    android:paddingRight="@dimen/wificonfig_pading_right"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wificonfig_margain_top"
        android:text="1/4"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/wificonfig_order_ts"/>
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/productinfo_image_height"
        android:layout_height="@dimen/productinfo_image_width"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_des"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:textSize="@dimen/wificonfig_productdes_ts"
        android:textColor="#333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>