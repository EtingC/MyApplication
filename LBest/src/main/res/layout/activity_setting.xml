<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context="com.lbest.rm.SettingActivity">

    <include layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:layout_below="@+id/toolbar_contain"
        android:id="@+id/rl_modifynickename"
        android:layout_width="match_parent"
        android:background="@drawable/transparent_selector"
        android:layout_height="@dimen/setting_item_height"
        android:paddingLeft="@dimen/setting_padding_left"
        android:paddingRight="@dimen/setting_padding_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_nickname"
            android:textColor="@color/tabgray_selected"
            android:textSize="@dimen/setting_ts" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lines="1"
            android:gravity="right"
            android:textSize="@dimen/setting_ts"
            android:layout_marginLeft="42dp"
            android:ellipsize="end"
            android:textColor="@color/tabgray"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/iv_arrow1"
            android:layout_width="@dimen/setting_arrow_width"
            android:layout_height="@dimen/setting_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_gray_right" />
    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_below="@+id/rl_modifynickename"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />

    <RelativeLayout
        android:layout_below="@+id/divider1"
        android:id="@+id/rl_modifyicon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/transparent_selector"
        android:paddingLeft="@dimen/setting_padding_left"
        android:paddingRight="@dimen/setting_padding_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/tabgray_selected"
            android:text="@string/str_faceicon"
            android:textSize="@dimen/setting_ts" />

        <ImageView
            android:id="@+id/iv_faceicon"
            android:layout_width="@dimen/setting_faceicon_size"
            android:layout_height="@dimen/setting_faceicon_size"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_arrow2"
            android:scaleType="centerCrop"
            android:layout_marginRight="5dp"
            android:src="@drawable/default_icon" />

        <ImageView
            android:id="@+id/iv_arrow2"
            android:layout_width="@dimen/setting_arrow_width"
            android:layout_height="@dimen/setting_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_gray_right" />
    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_below="@+id/rl_modifyicon"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />
    <View
        android:id="@+id/divider3"
        android:layout_below="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />
    <RelativeLayout
        android:layout_below="@+id/divider3"
        android:id="@+id/rl_modifypassword"
        android:layout_width="match_parent"
        android:background="@drawable/transparent_selector"
        android:layout_height="@dimen/setting_item_height"
        android:paddingLeft="@dimen/setting_padding_left"
        android:paddingRight="@dimen/setting_padding_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/tabgray_selected"
            android:text="@string/str_modifypassword"
            android:textSize="@dimen/setting_ts" />

        <ImageView
            android:id="@+id/iv_arrow3"
            android:layout_width="@dimen/setting_arrow_width"
            android:layout_height="@dimen/setting_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow_gray_right" />
    </RelativeLayout>
    <View
        android:id="@+id/divider4"
        android:layout_below="@+id/rl_modifypassword"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />


    <View
        android:id="@+id/divider5"
        android:layout_above="@+id/bt_loginout"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />
    <TextView
        android:id="@+id/bt_loginout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_loginout"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="@dimen/setting_ts"
        android:background="#FFFFFF"
        android:layout_above="@+id/divider6"
        android:textColor="@color/red"/>
    <View
        android:id="@+id/divider6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />
</RelativeLayout>
