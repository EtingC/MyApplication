<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context="com.lbest.rm.DevicePropertyActivity">

    <include layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:id="@+id/rl_modifydevicename"
        android:layout_width="match_parent"
        android:layout_height="@dimen/deviceproperty_height"
        android:layout_below="@+id/toolbar_contain"
        android:background="@drawable/transparent_selector"
        android:paddingLeft="@dimen/deviceproperty_padding_left"
        android:paddingRight="@dimen/deviceproperty_padding_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_devicename"
            android:textColor="@color/tabgray_selected"
            android:textSize="@dimen/deviceproperty_ts" />

        <TextView
            android:id="@+id/tv_devicename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_arrow1"
            android:text="*****"
            android:textColor="@color/tabgray"
            android:textSize="@dimen/deviceproperty_ts" />

        <ImageView
            android:id="@+id/iv_arrow1"
            android:layout_width="@dimen/deviceproperty_arrow_width"
            android:layout_height="@dimen/deviceproperty_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_gray_right" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_modifydevicename"
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />

    <RelativeLayout
        android:id="@+id/rl_modifyicon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/divider1"
        android:background="@drawable/transparent_selector"
        android:paddingLeft="@dimen/deviceproperty_padding_left"
        android:paddingRight="@dimen/deviceproperty_padding_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_deviceicon"
            android:textColor="@color/tabgray_selected"
            android:textSize="@dimen/deviceproperty_ts" />

        <ImageView
            android:id="@+id/iv_deviceicon"
            android:layout_width="@dimen/deviceproperty_deviceicon_size"
            android:layout_height="@dimen/deviceproperty_deviceicon_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_arrow2"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_arrow2"
            android:layout_width="@dimen/deviceproperty_arrow_width"
            android:layout_height="@dimen/deviceproperty_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_gray_right" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_modifyicon"
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />

    <RelativeLayout
        android:id="@+id/rl_deviceota"
        android:layout_width="match_parent"
        android:layout_height="@dimen/deviceproperty_item_height"
        android:layout_below="@+id/divider2"
        android:background="@drawable/transparent_selector"
        android:paddingLeft="@dimen/deviceproperty_padding_left"
        android:paddingRight="@dimen/deviceproperty_padding_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/str_deviceota"
            android:textColor="@color/tabgray_selected"
            android:textSize="@dimen/deviceproperty_ts" />

        <ImageView
            android:id="@+id/iv_arrow4"
            android:layout_width="@dimen/deviceproperty_arrow_width"
            android:layout_height="@dimen/deviceproperty_arrow_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_gray_right" />
    </RelativeLayout>
    <View
        android:layout_below="@+id/rl_deviceota"
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />

    <View
        android:layout_above="@+id/bt_deletedevice"
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />
    <TextView
        android:layout_above="@+id/divider5"
        android:id="@+id/bt_deletedevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="@string/str_deletedevice"
        android:gravity="center"
        android:textColor="@color/red"
        android:padding="10dp"
        android:textSize="@dimen/deviceproperty_ts" />
    <View
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />
</RelativeLayout>
