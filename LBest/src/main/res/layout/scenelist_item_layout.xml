<?xml version="1.0" encoding="utf-8"?>
<com.lbest.rm.view.SwipeListItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slil_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/relaccount_item_action_width"
        android:layout_height="@dimen/relaccount_item_height"
        android:background="@color/red"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/relaccount_item_ts" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/relaccount_item_height">

        <LinearLayout
            android:id="@+id/ll_scene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tabgray_selected"
                android:textSize="@dimen/scene_item_ts" />

            <TextView
                android:id="@+id/tv_scenedes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/tabgray"
                android:textSize="@dimen/scene_item_des_ts" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_scene_onoff"
            android:layout_width="@dimen/scene_item_bt_width"
            android:layout_height="@dimen/scene_item_bt_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/scene_off"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</com.lbest.rm.view.SwipeListItemLayout>