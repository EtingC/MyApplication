<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/tv_enumname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/tabgray_selected"
        android:textSize="@dimen/scene_action_ts"/>

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/scene_action_iv_size"
        android:layout_height="@dimen/scene_action_iv_size"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_noselected"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
    <View
        android:layout_below="@+id/iv_select"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg"
        />
</RelativeLayout>