<?xml version="1.0" encoding="utf-8"?>
<com.lbest.rm.view.SwipeListItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slil_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/relaccount_item_action_width"
        android:layout_height="@dimen/relaccount_item_height"
        android:background="@color/red"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/relaccount_item_ts" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/relaccount_item_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_accountname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:textColor="@color/tabgray_selected"
            android:textSize="@dimen/relaccount_item_ts" />
    </LinearLayout>

</com.lbest.rm.view.SwipeListItemLayout>